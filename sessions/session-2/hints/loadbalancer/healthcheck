def configure_lb_health_check():
    ELB_CLIENT.configure_health_check(
        LoadBalancerName=config.ELB_NAME,
        HealthCheck=\
            {'Target': config.ELB_HEALTH,
             'Interval': config.ELB_INTERVAL,
             'Timeout': config.ELB_TIMEOUT,
             'UnhealthyThreshold': config.ELB_UNHEALTH_THRESHOLD,
             'HealthyThreshold': config.ELB_HEALTH_THRESHOLD
            })
